<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.marketingmail.splash.TelaProntoSplash"
    android:background="@drawable/fundo1"
    android:padding="12dp"
    android:orientation="vertical"
    >

    <!--__________TEXTO TUDO PRONTO__________-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="@string/str_pronto"
        android:textSize="45sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/cor_texto"
        />
    <!--________IMAGEM APERTO DE MÃO_________-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="45dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/iconearcodo2"


        />
     <!--_______TEXTO JÁ PODE USAR MARKETINGMAIL____-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cor_texto"
        android:text="@string/str_podeusar"
        android:textSize="45sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textStyle="bold"

        />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@drawable/logo3"
    />

</LinearLayout>

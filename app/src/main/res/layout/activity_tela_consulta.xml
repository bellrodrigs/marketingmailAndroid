<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaConsulta"
    android:orientation="vertical"
    android:background="@drawable/fundo1"
    android:padding="12dp"
    >




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo3"
                android:layout_marginTop="10dp"/>



        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingEnd="2dp"

            android:layout_marginTop="2dp"
            android:layout_marginBottom="15dp"
            android:text="@string/str_gerenciar"
            android:textAlignment="center"
            android:textColor="@color/cor_texto"
            android:textSize="29sp"
            android:drawableEnd="@drawable/iconegerenciarcontato"
            android:textStyle="bold" />
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/str_opcao"
    android:textAlignment="center"
    android:textSize="15sp"
    android:layout_marginBottom="8dp"
    />




<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"

    >



    <ListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true" />



</LinearLayout>





</LinearLayout>
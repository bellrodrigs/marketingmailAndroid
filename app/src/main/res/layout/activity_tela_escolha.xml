<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaEscolha"
    android:orientation="vertical"
    android:background="@drawable/fundo1"
    android:padding="12dp"
    >

        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo3"
            android:layout_marginTop="10dp"
            />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/str_escolha"
        android:textSize="29sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/cor_texto"


        />
   <!--__________Layout que carrega os botões_____-->

            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

<!--___________Imagens dos botões_____________-->

        <ImageButton
            android:id="@+id/btn_contato"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/agenda"
            android:paddingStart="15dp"
            android:layout_gravity="start"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:id="@+id/btn_grupo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/grupo"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:id="@+id/btn_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:src="@drawable/contact2"

            android:paddingEnd="15dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            />


            </FrameLayout>


    <!--____Layout que carrega descrição dos botões___-->
            <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            >
        <!--_____Descrição dos botões______-->
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cadastarcontato"

            android:textStyle="bold"


            android:textSize="20sp"
            android:textAlignment="center"
            android:paddingStart="12dp"

            />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cadastrargrupo"
            android:layout_gravity="center"
            android:textStyle="bold"

            android:textSize="20sp"
            android:textAlignment="center"
            android:paddingStart="15dp"
            />


            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_enviaremail"
            android:layout_gravity="end"


            android:textStyle="bold"
            android:textSize="20sp"

            android:textAlignment="center"
            android:paddingEnd="20dp"
            />
            </FrameLayout>



                    <FrameLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                    <ImageButton
                    android:id="@+id/btn_gerenciar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_gravity="start"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:paddingStart="15dp"

                    android:src="@drawable/gerenciar" />



                        <ImageButton
                            android:id="@+id/btn_gerenciargrupo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"

                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:paddingStart="15dp"

                            android:src="@drawable/gerenciargrupo" />


                        <ImageButton
                            android:id="@+id/btn_ajuda"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"

                            android:background="?android:attr/selectableItemBackgroundBorderless"
                            android:paddingStart="15dp"

                            android:src="@drawable/support" />

                    </FrameLayout>

                    <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="50dp"
            >
        <!--_____Descrição dos botões______-->

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_gerenciar"

                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:paddingStart="15dp"

                    />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_gerenciargrupo"
                            android:layout_gravity="center"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:paddingStart="15dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/str_ajuda"
                            android:layout_gravity="end"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:paddingEnd="30dp"

                            />

                    </FrameLayout>

        <!--_____Preciso de ajuda______-->

                        <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_direitos"
                        android:textSize="10sp"
                            />


              </FrameLayout>

         </LinearLayout>

    </ScrollView>

</LinearLayout>